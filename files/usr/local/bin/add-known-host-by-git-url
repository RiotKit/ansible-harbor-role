import re
import sys
import os
import subprocess
from typing import Tuple
from urllib.parse import urlparse


def get_known_host(url: str) -> Tuple[str, int]:
    if url.startswith('http'):
        parsed = urlparse(url)

        return parsed.hostname, parsed.port
    else:
        match = re.findall('@([A-Za-z-0-9.\-_]+)(?:(:([0-9]+))?)', url)

        if not match:
            raise Exception('Cannot parse git remote "%s"' % url)

        if len(match[0]) >= 3:
            return match[0][0], int(match[0][2])

        return match[0][0], 22


def should_append_to_known_hosts(host: str):
    path = os.path.expanduser('~/.ssh/known_hosts')

    if not os.path.isfile(path):
        return True

    patterns = [
        host + ',',
        host + ']:',
        host + ' '
    ]

    with open(path, 'rb') as f:
        content = f.read().decode('utf-8')

        for pattern in patterns:
            if pattern in content:
                return False

    return True


def main(url: str):
    host, port = get_known_host(url)

    if should_append_to_known_hosts(host):
        try:
            subprocess.check_call('ssh-keyscan -t rsa -p %i %s >> ~/.ssh/known_hosts' % (port, host), shell=True)
        except subprocess.CalledProcessError as e:
            print(str(e))
            sys.exit(1)


if __name__ == '__main__':
    main(sys.argv[1])
    sys.exit(0)
